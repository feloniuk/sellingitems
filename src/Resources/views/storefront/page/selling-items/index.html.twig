    padding-bottom: 15px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.header-labels {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.catalog-label {
    font-size: 1.2rem;
    color: #bdc3c7;
    font-weight: 300;
}

.wardrobe-label {
    font-size: 1.3rem;
    font-weight: 600;
    color: #bdc3c7;
}

.filter-tabs {
    display: flex;
    gap: 15px;
    margin-bottom: 25px;
    flex-wrap: wrap;
}

.filter-tab {
    background: rgba(255, 255, 255, 0.1);
    color: #bdc3c7;
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 10px 20px;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
