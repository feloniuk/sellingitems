<script>
let selectedItemId = null;
let currentSort = 'asc';
let currentFilter = 'name';

// Initialize page
document.addEventListener('DOMContentLoaded', function() {
    initializeCharacter();
    setupEventListeners();
    
    // Auto-select first item if available
    const firstItem = document.querySelector('.item-card');
    if (firstItem && !selectedItemId) {
        const itemId = firstItem.getAttribute('data-item-id');
        const price = firstItem.getAttribute('data-price');
        firstItem.click();
    }
    
    // Log for debugging
    console.log('Items found:', document.querySelectorAll('.item-card').length);
});

function initializeCharacter() {
    // Set up default character state
    updateAddToCartButton(false);
}

function setupEventListeners() {
    // Gender selection
    document.querySelectorAll('.gender-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.gender-btn').forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            
            const gender = this.getAttribute('data-gender');
            document.querySelector('.active-gender').textContent = gender.charAt(0).toUpperCase() + gender.slice(1);
            
            // Update character model based on gender
            updateCharacterModel(gender);
        });
    });

    // Filter tabs
    document.querySelectorAll('.filter-tab:not(.sort-btn)').forEach(tab => {
        tab.addEventListener('click', function() {
            document.querySelectorAll('.filter-tab:not(.sort-btn)').forEach(t => t.classList.remove('active'));
            this.classList.add('active');
            
            currentFilter = this.getAttribute('data-filter');
            filterItems();
        });
    });

    // Character controls
    document.querySelectorAll('.control-item').forEach(control => {
        control.addEventListener('click', function() {
            // Add visual feedback
            this.style.transform = 'translateX(10px) scale(1.1)';
            setTimeout(() => {
                this.style.transform = '';
            }, 200);
        });
    });
}

function selectItem(itemId, title, price, previewImage, mainImage) {
    console.log('Selecting item:', {itemId, title, price, previewImage, mainImage});
    
    // Remove previous selection
    document.querySelectorAll('.item-card').forEach(card => {
        card.classList.remove('selected');
    });
    
    // Add selection to clicked item
    const selectedCard = document.querySelector(`[data-item-id="${itemId}"]`);
    if (selectedCard) {
        selectedCard.classList.add('selected');
        selectedItemId = itemId;
        
        // Update character display
        updateCharacterDisplay(mainImage || previewImage, title);
        
        // Update price and enable add to cart
        updateAddToCartButton(true, price);
        
        // Add selection animation
        selectedCard.style.transform = 'translateY(-8px) scale(1.05)';
        setTimeout(() => {
            selectedCard.style.transform = 'translateY(-3px)';
        }, 300);
    }
}

function updateCharacterDisplay(imageUrl, itemTitle) {
    const characterModel = document.getElementById('characterModel');
    
    if (imageUrl && imageUrl.trim() !== '') {
        // Show the item image on character
        characterModel.innerHTML = `<img src="${imageUrl}" alt="${itemTitle}" class="equipped-item">`;
        
        // Add wear animation
        const equippedItem = characterModel.querySelector('.equipped-item');
        equippedItem.style.opacity = '0';
        equippedItem.style.transform = 'scale(0.8)';
        
        setTimeout(() => {
            equippedItem.style.transition = 'all 0.5s ease';
            equippedItem.style.opacity = '1';
