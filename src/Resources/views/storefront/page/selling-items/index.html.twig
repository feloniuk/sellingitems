.try-on-btn:hover {
    background: linear-gradient(145deg, #c0392b, #a93226);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(231, 76, 60, 0.4);
}

.item-price {
    font-size: 0.85rem;
    display: block;
    margin-top: 3px;
    font-weight: 700;
}

.no-items {
    grid-column: 1 / -1;
