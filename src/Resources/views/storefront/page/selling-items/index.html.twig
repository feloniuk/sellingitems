.item-image img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
    border-radius: 8px;
}

.placeholder-image {
    width: 60px;
    height: 60px;
    background: rgba(149, 165, 166, 0.3);
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: #bdc3c7;
}

.item-title {
    font-size: 0.8rem;
    color: #bdc3c7;
    margin-bottom: 10px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
