                <div class="filter-tabs">
                    <button class="filter-tab active" data-filter="name">T-mog Name</button>
                    <button class="filter-tab" data-filter="universe">Universe</button>
                    <button class="filter-tab sort-btn" onclick="toggleSort()">
                        Sort by Price <span class="sort-arrow">▼</span>
                    </button>
                </div>

                <!-- Debug Info -->
                <div class="debug-info" style="color: #999; font-size: 0.8rem; margin-bottom: 15px;">
                    Found {{ itemsTotal|default(0) }} items
                </div>

                <!-- Items Grid -->
                <div class="items-grid" id="itemsGrid">
                    {% if items and items|length > 0 %}
                        {% for item in items %}
                            <div class="item-card" 
                                 data-item-id="{{ item.id }}" 
                                 data-price="{{ item.price|default(0) }}" 
                                 onclick="selectItem(
                                     '{{ item.id }}', 
                                     '{{ item.title|e('js') }}', 
                                     {{ item.price|default(0) }}, 
                                     '{{ item.previewImage ? item.previewImage.url|e('js') : '' }}', 
                                     '{{ item.mainImage ? item.mainImage.url|e('js') : '' }}'
                                 )">
                                <div class="item-image">
                                    {% if item.previewImage and item.previewImage.url %}
                                        <img src="{{ item.previewImage.url }}" alt="{{ item.title }}">
                                    {% elseif item.mainImage and item.mainImage.url %}
                                        <img src="{{ item.mainImage.url }}" alt="{{ item.title }}">
                                    {% else %}
                                        <div class="placeholder-image">
                                            <span>{{ item.title|slice(0, 2)|upper }}</span>
                                        </div>
                                    {% endif %}
                                </div>
                                
                                <div class="item-actions">
                                    <button class="try-on-btn">
                                        Try it on<br>
                                        <span class="item-price">€{{ item.price|default(0)|number_format(2, '.', ',') }}</span>
                                    </button>
                                </div>
                                
                                <div class="item-title">{{ item.title }}</div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="no-items">
                            <p>No items found.</p>
                            <p style="font-size: 0.9rem; color: #999;">
                                Check if there are active selling items in the administration panel.
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.dressing-room-page {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    min-height: 100vh;
    color: #fff;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    padding: 20px 0;
    overflow-x: hidden;
}

.dressing-room-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
}

.welcome-header {
    text-align: center;
    margin-bottom: 40px;
}

.welcome-header h1 {
    font-size: 2.5rem;
    font-weight: 300;
    color: #fff;
    margin: 0;
    letter-spacing: 1px;
}

.highlight {
    color: #e74c3c;
    font-weight: 600;
}

.dressing-room-content {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 40px;
    align-items: start;
}

/* Character Section */
.character-section {
    background: rgba(44, 62, 80, 0.8);
    border-radius: 15px;
    padding: 25px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.character-section h2 {
    font-size: 1.5rem;
    margin-bottom: 20px;
    color: #bdc3c7;
    font-weight: 300;
}

.gender-selection {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 25px;
    padding: 15px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
}

.gender-btn {
    width: 40px;
    height: 40px;
    background: rgba(149, 165, 166, 0.3);
    border: 2px solid transparent;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.gender-btn.active {
    background: #e74c3c;
    border-color: #c0392b;
}

.gender-btn img {
    width: 24px;
    height: 24px;
    filter: brightness(0) invert(1);
}

.gender-label, .race-label {
    font-size: 1.1rem;
    font-weight: 600;
}

.active-gender {
    color: #e74c3c;
}

.race-label {
    background: #e74c3c;
    color: white;
    padding: 5px 12px;
    border-radius: 15px;
    font-size: 0.9rem;
    margin-left: auto;
}

.character-display {
    position: relative;
    text-align: center;
}

.character-avatar {
    width: 280px;
    height: 350px;
    background: linear-gradient(145deg, #2c3e50, #34495e);
    border-radius: 15px;
    margin: 0 auto 25px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
}

.character-model {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.base-character {
    max-width: 180px;
    max-height: 280px;
    object-fit: contain;
}

.character-controls {
    position: absolute;
    left: -50px;
    top: 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.control-item {
    width: 40px;
    height: 40px;
    background: rgba(52, 73, 94, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.control-item:hover {
    background: rgba(231, 76, 60, 0.6);
    border-color: #e74c3c;
    transform: translateX(5px);
}

.control-item img {
    width: 24px;
    height: 24px;
}

.add-to-cart-btn {
    background: linear-gradient(145deg, #e74c3c, #c0392b);
    color: white;
    border: none;
    padding: 15px 30px;
    border-radius: 25px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    min-width: 140px;
    box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
}

.add-to-cart-btn:hover:not(:disabled) {
    background: linear-gradient(145deg, #c0392b, #a93226);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
}

.add-to-cart-btn:disabled {
    background: rgba(149, 165, 166, 0.5);
    cursor: not-allowed;
    box-shadow: none;
}

.price {
    font-size: 1.1rem;
    display: block;
    margin-top: 5px;
    font-weight: 700;
}

/* Wardrobe Section */
.wardrobe-section {
    background: rgba(44, 62, 80, 0.8);
    border-radius: 15px;
    padding: 25px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.wardrobe-header {
