    border-color: #c0392b;
    color: white;
    transform: translateY(-1px);
}

.sort-btn .sort-arrow {
    margin-left: 8px;
    font-size: 0.8rem;
    transition: transform 0.3s ease;
}

.debug-info {
    padding: 10px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    text-align: center;
}

.items-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 20px;
    max-height: 500px;
    overflow-y: auto;
    padding-right: 10px;
}

.items-grid::-webkit-scrollbar {
    width: 8px;
}

.items-grid::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
}

.items-grid::-webkit-scrollbar-thumb {
    background: #e74c3c;
    border-radius: 4px;
}

.items-grid::-webkit-scrollbar-thumb:hover {
    background: #c0392b;
}

.item-card {
    background: linear-gradient(145deg, #34495e, #2c3e50);
    border-radius: 12px;
    padding: 15px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
}

.item-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(145deg, transparent, rgba(231, 76, 60, 0.1));
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
}

.item-card:hover::before {
    opacity: 1;
}

.item-card:hover {
    transform: translateY(-5px);
    border-color: rgba(231, 76, 60, 0.5);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
}

.item-card.selected {
    border-color: #e74c3c;
    background: linear-gradient(145deg, #e74c3c, #c0392b);
    transform: translateY(-3px);
}

.item-image {
    width: 80px;
    height: 80px;
    margin: 0 auto 15px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
